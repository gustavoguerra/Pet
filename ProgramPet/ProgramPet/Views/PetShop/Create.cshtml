@model ProgramPet.Models.PetViewModel

<div class="content-wrapper">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Cadastro de Cliente</h4>
                <form class="form-sample" asp-action="Creat" asp-controller="PetShopController" asp-anti-forgery>
                    @*<input type="hidden" class="form-control" asp-for="ID" />*@
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" asp-for="Name"></label>
                                <div class="col-sm-4">
                                    <input type="text" class="form-control" asp-for="Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" asp-for="Age"></label>
                                <div class="col-sm-9">
                                    <input type="datetime" class="form-control" asp-for="Age" />
                                    <span asp-validation-for="Age" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" asp-for="Active"></label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" asp-for="Active" />
                                    <span asp-validation-for="Active" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                  
                    <button type="submit" class="btn btn-outline-success btn-fw">
                        <i class="mdi mdi-file-document"></i>Salvar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>