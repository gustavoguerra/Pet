@model IEnumerable<ProgramPet.Models.PetViewModel>

    <h1>Pet Shot</h1>

    <div class"row col-md-2">
        <div class="form-group row">
            <a asp-controller="PetShop" asp-action="Create" class="btn btn-primary">Novo Cadastro</a>
        </div>
    </div>
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Idade</th>
                <th>Telefone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr class="even gradeC">
                    <td>@item.id</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Active</td>
                    <td><a href="/PetShop/Edit/@item.id">Editar</a></td>
                    <td><a href="/PetShop/Delete/@item.id">Editar</a></td>
                </tr>
            }
        </tbody>
    </table>

